#!/usr/bin/env bash

set -e
set -o pipefail

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

echo 'Setting up private NPM registries.' | indent

readonly BUILD_DIR=$1
readonly ENV_DIR=$3

echo "${ENV_DIR}"

if [[ ! -n "${BUILD_DIR}" ]]; then
  echo "Failed! No build directory specified." | indent
  exit 1
fi

cd ${BUILD_DIR}

# Assert existence of config vars.
if [[ -z "$GITHUB_NPM_TOKEN" ]]; then
  echo "Failed! Variable \$GITHUB_NPM_TOKEN not set." | indent
  exit 1
fi

if [[ -z "$FONTAWESOME_NPM_TOKEN" ]]; then
  echo "Failed! Variable \$FONTAWESOME_NPM_TOKEN not set." | indent
  exit 1
fi

cat >> .yarnrc.yml << EOL
npmScopes:
  trusted:
    npmAuthToken: "${GITHUB_NPM_TOKEN}"
    npmRegistryServer: "https://npm.pkg.github.com"
  fortawesome:
    npmAuthToken: "${FONTAWESOME_NPM_TOKEN}"
    npmRegistryServer: "https://npm.fontawesome.com/"
EOL

echo "Done!" | indent
exit 0
